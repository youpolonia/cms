{
  "title": "AI Analytics Dashboard",
  "description": "Dashboard for tracking AI usage metrics and costs",
  "tags": ["ai", "analytics", "monitoring"],
  "timezone": "browser",
  "editable": true,
  "refresh": "5s",
  "panels": [
    {
      "title": "AI Cost Breakdown",
      "type": "piechart",
      "datasource": "CMS Database",
      "targets": [
        {
          "query": "SELECT provider, SUM(token_cost) as token_cost FROM ai_cost_tracking GROUP BY provider",
          "format": "table"
        }
      ],
      "options": {
        "showLegend": true,
        "legendPosition": "right"
      }
    },
    {
      "title": "Content Generation Metrics",
      "type": "barchart",
      "datasource": "CMS Database",
      "targets": [
        {
          "query": "SELECT DATE(created_at) as date, COUNT(*) as requests, SUM(word_count) as words FROM content_generation_logs GROUP BY date ORDER BY date",
          "format": "timeseries"
        }
      ],
      "options": {
        "stacking": "normal"
      }
    },
    {
      "title": "Moderation Effectiveness",
      "type": "stat",
      "datasource": "CMS Database",
      "targets": [
        {
          "query": "SELECT COUNT(*) as total, SUM(CASE WHEN action = 'approved' THEN 1 ELSE 0 END) as approved FROM content_moderation_logs",
          "format": "table"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "title": "AI Usage Trends",
      "type": "graph",
      "datasource": "CMS Database",
      "targets": [
        {
          "query": "SELECT DATE(created_at) as date, COUNT(*) as requests, SUM(token_count) as tokens FROM ai_usage_logs GROUP BY date ORDER BY date",
          "format": "timeseries"
        }
      ],
      "options": {
        "legend": {
          "show": true,
          "values": true
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "time_range",
        "type": "interval",
        "label": "Time Range",
        "options": ["1h", "6h", "12h", "1d", "7d", "30d"]
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "name": "Thresholds",
        "datasource": "CMS Database",
        "enable": true,
        "query": "SELECT created_at as time, 'High Usage' as text FROM ai_usage_logs WHERE token_count > 10000"
      }
    ]
  }
}