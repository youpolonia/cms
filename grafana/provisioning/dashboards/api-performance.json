{
  "title": "API Performance",
  "panels": [
    {
      "title": "Response Times",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(laravel_api_response_time_bucket[1m])) by (le, route)",
          "legendFormat": "{{route}} - p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(laravel_api_response_time_bucket[1m])) by (le, route)",
          "legendFormat": "{{route}} - p99"
        }
      ]
    },
    {
      "title": "Request Rates",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(laravel_api_requests_total[1m])) by (route)",
          "legendFormat": "{{route}}"
        }
      ]
    },
    {
      "title": "Error Rates",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(laravel_api_errors_total[1m])) by (route)",
          "legendFormat": "{{route}}"
        }
      ]
    },
    {
      "title": "Cache Efficiency",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(laravel_api_cache_hits[1m])) / sum(rate(laravel_api_requests_total[1m])) * 100",
          "legendFormat": "Cache Hit %"
        }
      ]
    }
  ]
}