{
  "title": "Database Performance",
  "panels": [
    {
      "title": "Query Throughput",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(mysql_global_status_queries[1m])",
          "legendFormat": "Queries/sec"
        },
        {
          "expr": "rate(mysql_global_status_slow_queries[1m])",
          "legendFormat": "Slow Queries/sec"
        }
      ]
    },
    {
      "title": "Cache Efficiency",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "mysql_global_status_qcache_hits / (mysql_global_status_qcache_hits + mysql_global_status_qcache_inserts) * 100",
          "legendFormat": "Query Cache Hit %"
        }
      ]
    },
    {
      "title": "Connection Usage",
      "type": "gauge",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "mysql_global_status_threads_connected / mysql_global_variables_max_connections * 100",
          "legendFormat": "Connection Pool %"
        }
      ]
    },
    {
      "title": "Table Performance",
      "type": "table",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "mysql_info_schema_table_rows",
          "legendFormat": "Row Count"
        },
        {
          "expr": "mysql_info_schema_table_size",
          "legendFormat": "Table Size"
        }
      ]
    }
  ]
}