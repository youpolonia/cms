{
  "dashboard": {
    "title": "AI Content Generation Metrics",
    "panels": [
      {
        "title": "Generation Success Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(ai_content_generation_success_total[5m])) / sum(rate(ai_content_generation_attempts_total[5m]))",
            "legendFormat": "Success Rate"
          }
        ]
      },
      {
        "title": "API Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(ai_content_api_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th Percentile"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(ai_content_api_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "Median"
          }
        ]
      },
      {
        "title": "Moderation Queue Status",
        "type": "stat",
        "targets": [
          {
            "expr": "ai_content_moderation_queue_size",
            "legendFormat": "Queue Size"
          }
        ]
      },
      {
        "title": "User Usage Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(ai_content_user_usage_count) by (user_id)",
            "legendFormat": "User {{user_id}}"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "environment",
          "query": "label_values(ai_content_generation_attempts_total, environment)"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(ai_content_version[1h]) > 0"
        }
      ]
    },
    "refresh": "1m"
  }
}