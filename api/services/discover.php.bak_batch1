<?php
require_once __DIR__.'/../../includes/Service/ServiceIntegrationHandler.php';

header('Content-Type: application/json');

try {
    $services = ServiceIntegrationHandler::discoverServices();
    echo json_encode([
        'status' => 'success',
        'services' => $services
    ]);
} catch (Exception $e) {
    http_response_code(500);
    echo json_encode([
        'status' => 'error',
        'message' => $e->getMessage()
    ]);
}
