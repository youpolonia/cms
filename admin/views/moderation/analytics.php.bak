<script>
// Flag Trends Chart
var ctx = document.getElementById('flagTrendsChart');
var flagTrendsChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: <?= json_encode(array_column($flagTrends, 'day')) ?>,
        datasets: [
            <?php foreach ($flagTypes as $type): ?>
            {
                label: '<?= $type ?>',
                data: <?= json_encode(array_map(function($day) use ($flagTrends, $type) { ?>
                    $match = array_filter($flagTrends, function($item) use ($day, $type) {
                        return $item['day'] === $day && $item['flag_type'] === $type;
                    });
                    return $match ? current($match)['count'] : 0;
                }, array_unique(array_column($flagTrends, 'day')))) ?>,
                borderColor: getRandomColor(),
                backgroundColor: 'rgba(0, 0, 0, 0)',
                tension: 0.1
