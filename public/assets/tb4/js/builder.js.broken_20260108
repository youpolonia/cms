                    </div>
                </div>`;

            // Fullwidth Menu module
            case 'fw_menu': {
                let fwmBg = data.background_color || '#1f2937';
                let fwmTextColor = data.text_color || '#ffffff';
                let fwmHoverColor = data.hover_color || '#3b82f6';
                let fwmLogo = data.logo_text || 'LOGO';

                let menuItems = ['Home', 'About', 'Services', 'Portfolio', 'Blog', 'Contact'];

