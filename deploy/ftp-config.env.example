# FTP Deployment Configuration
# Rename to ftp-config.env and fill in your credentials

FTP_HOST=your-ftp-host.com
FTP_PORT=21
FTP_USER=your_username
FTP_PASS=your_password
FTP_ROOT=/public_html  # Typically the web root on shared hosting
FTP_PASSIVE_MODE=true  # Recommended for shared hosting
FTP_SSL=false          # Set to true if using FTPS

# Deployment options
DEPLOY_EXCLUDE=node_modules,.git,.idea,*.log
DEPLOY_TEST_MODE=false # Set to true for dry-run testing