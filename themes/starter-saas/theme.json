{
  "name": "Starter SaaS",
  "description": "Modern SaaS landing page theme with glassmorphism and gradient accents",
  "version": "1.0.0",
  "author": "Jessie CMS",
  "supports": {
    "theme-builder": true,
    "custom-header": true,
    "custom-footer": true,
    "custom-colors": true
  },
  "options": {
    "show_header": true,
    "show_footer": true,
    "preload_fonts": true,
    "body_background": "#0a0a0f"
  },
  "colors": {
    "primary": "#6366f1",
    "secondary": "#818cf8",
    "accent": "#06b6d4",
    "background": "#0a0a0f",
    "surface": "#131320",
    "text": "#f1f5f9",
    "text_muted": "#94a3b8",
    "border": "#1e1e35",
    "success": "#10b981",
    "warning": "#f59e0b",
    "error": "#ef4444"
  },
  "typography": {
    "fontFamily": "Inter",
    "headingFont": "Inter",
    "baseFontSize": "16",
    "lineHeight": "1.6",
    "h1Size": "3.5",
    "h2Size": "2.5",
    "h3Size": "1.75",
    "fontWeight": "400",
    "headingWeight": "700"
  },
  "header": {
    "background": "transparent",
    "sticky": true,
    "blur": true,
    "height": "72"
  },
  "buttons": {
    "borderRadius": "12",
    "paddingX": "28",
    "paddingY": "14",
    "fontWeight": "600",
    "shadow": true
  },
  "layout": {
    "containerWidth": "1200",
    "sectionSpacing": "100",
    "borderRadius": "16"
  },
  "effects": {
    "shadowStrength": "25",
    "hoverScale": "1.03",
    "transitionSpeed": "200"
  },
  "homepage_sections": [
    {
      "id": "hero",
      "label": "Hero",
      "icon": "‚≠ê",
      "required": true
    },
    {
